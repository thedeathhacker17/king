<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".SearchDataActivity">

    <!-- Heading -->
    <TextView
        android:id="@+id/heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search Data"
        android:textSize="18sp"
        android:textColor="#3A3B3C"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"/>

    <!-- Customer Base Search Section -->
    <TextView
        android:id="@+id/customerBaseSearchLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Customer Base Search"
        android:textSize="16sp"
        android:textColor="#3A3B3C"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/heading"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginStart="16dp"/>

    <!-- Customer Base Search Dropdown -->
    <Spinner
        android:id="@+id/customerBaseSearchDropdown"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:padding="10dp"
        android:elevation="2dp"
        app:layout_constraintTop_toBottomOf="@+id/customerBaseSearchLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>

    <!-- Other Search Criteria Section -->
    <TextView
        android:id="@+id/otherSearchCriteriaLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Other Search Criteria"
        android:textSize="16sp"
        android:textColor="#3A3B3C"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/customerBaseSearchDropdown"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginStart="16dp"/>

    <!-- Other Search Criteria Dropdown -->
    <Spinner
        android:id="@+id/otherSearchCriteriaDropdown"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:padding="10dp"
        android:elevation="2dp"
        app:layout_constraintTop_toBottomOf="@+id/otherSearchCriteriaLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>

    <!-- Data Entry Field -->
    <EditText
        android:id="@+id/dataEntryField"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Enter your search data here"
        android:background="@android:color/white"
        android:padding="10dp"
        android:elevation="2dp"
        android:textColorHint="#8A8A8A"
        app:layout_constraintTop_toBottomOf="@+id/otherSearchCriteriaDropdown"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
