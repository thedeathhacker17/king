<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F6F6"
    android:layout_marginTop="100dp"
    android:padding="16dp">

    <!-- Header: Machine ID and User ID -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:paddingBottom="16dp">

        <TextView
            android:id="@+id/machine_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="16dp"
            android:text="Machine ID: 123456"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/user_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="User ID: USER001"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="30dp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="16sp" />
    </LinearLayout>

    <!-- Buttons Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <Button
            android:id="@+id/btn_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="User Details"
            android:backgroundTint="#045f5f"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textColor="#FFFFFF"
            android:padding="12dp"
            android:textSize="18sp"
            android:layout_marginBottom="12dp"/>

        <Button
            android:id="@+id/btn_search_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Search Data"
            android:backgroundTint="#045f5f"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textColor="#FFFFFF"
            android:padding="12dp"
            android:textSize="18sp"
            android:layout_marginBottom="12dp"/>

        <Button
            android:id="@+id/btn_device_login_pin_reset"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Device Login PIN Reset"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:backgroundTint="#045f5f"
            android:textColor="#FFFFFF"
            android:padding="12dp"
            android:textSize="18sp"
            android:layout_marginBottom="12dp"/>

        <Button
            android:id="@+id/btn_user_data_updation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="User Data Updation"
            android:backgroundTint="#045f5f"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textColor="#FFFFFF"
            android:padding="12dp"
            android:textSize="18sp"
            android:layout_marginBottom="12dp"/>

        <Button
            android:id="@+id/btn_customer_registration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Customer Registration"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:backgroundTint="#045f5f"
            android:textColor="#FFFFFF"
            android:padding="12dp"
            android:textSize="18sp"
            android:layout_marginBottom="12dp"/>

        <Button
            android:id="@+id/btn_customer_data_updation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Customer Data Updation"
            android:backgroundTint="#045f5f"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textColor="#FFFFFF"
            android:padding="12dp"
            android:textSize="18sp"
            android:layout_marginBottom="12dp"/>

        <Button
            android:id="@+id/btn_customer_id_deactivation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Customer ID Deactivation Request"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:backgroundTint="#045f5f"
            android:textColor="#FFFFFF"
            android:padding="12dp"
            android:textSize="18sp"/>
    </LinearLayout>
</LinearLayout>
